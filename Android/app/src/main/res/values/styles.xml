<resources>

    <!-- Base application theme. -->
    <style name="AppThemeActionBarNotPresent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlueSea</item>
        <item name="colorAccent">@color/colorDarkGreen</item>
    </style>

    <style name="AppThemeActionBarPresent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlueSea</item>
        <item name="colorAccent">@color/colorDarkGreen</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

</resources>
