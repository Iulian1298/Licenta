<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/authTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/authImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/authTitle"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/authActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/authImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="30dp"
                android:background="@drawable/buttons_layout_border"
                android:padding="3dp"
                android:text="@string/loginBtn"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="30dp"
                android:background="@drawable/buttons_layout_border"
                android:padding="3dp"
                android:text="@string/registerBtn"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/appDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authActions"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="@string/app_description"
            android:textColor="@color/colorGrey"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>