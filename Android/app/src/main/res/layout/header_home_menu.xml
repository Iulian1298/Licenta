<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="8dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/headerMenuUserImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/headerMenuImage"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/headerMenuUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/headerMenuUsername"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/headerMenuUserMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="@string/headerMenuMail"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />
    <!--<TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhiteGrey" />

</LinearLayout>